{
  "manifest_version": 2,
  "name": "Aemer",
  "description": "Detects whether the website in the current tab uses AEM.",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/jquery-3.3.1.slim.min.js",
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "resources/icons/icon_nok-16.png",
      "48": "resources/icons/icon_nok-48.png",
      "64": "resources/icons/icon_nok-64.png",
      "128": "resources/icons/icon_nok-128.png"
    },
    "default_title": "Aemer",
    "default_popup": "views/popup.html"
  },
  "permissions": [
    "storage"
  ]
}
